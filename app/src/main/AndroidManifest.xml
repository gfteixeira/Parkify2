<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.parkify">

    <!-- To auto-complete the email text field in the login form with the user's emails -->
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.READ_PROFILE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/logo_parkify"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.AppCompat.Light.NoActionBar" >
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".SignActivity"
            android:label="@string/title_activity_sign"
            android:parentActivityName=".MainActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.parkify.MainActivity" />
        </activity>
        <activity
            android:name=".LoginActivity"
            android:label="@string/title_activity_login"
            android:parentActivityName=".MainActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.parkify.MainActivity" />
        </activity>
        <activity
            android:name=".OrderActivity"
            android:label="@string/title_activity_order"
            android:parentActivityName=".LoginActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.parkify.LoginActivity" />
        </activity>
        <activity
            android:name=".OrdersActivity"
            android:label="@string/title_activity_order"
            android:parentActivityName=".OrderActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.parkify.OrderActivity" />
        </activity>
        <activity
            android:name=".DateOrderActivity"
            android:label="@string/title_activity_order"
            android:parentActivityName=".OrderActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.parkify.OrderActivity" />
        </activity>
        <activity
            android:name=".HourBeginOrderActivity"
            android:label="@string/title_activity_order"
            android:parentActivityName=".DateOrderActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.parkify.DateOrderActivity" />
        </activity>
        <activity
            android:name=".HourEndOrderActivity"
            android:label="@string/title_activity_order"
            android:parentActivityName=".HourBeginOrderActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.parkify.HourBeginOrderActivity" />
        </activity>
    </application>

</manifest>